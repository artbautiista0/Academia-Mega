@model List<proyectoMVC.Models.Producto>
@{
    ViewBag.Title = "Lista de Productos"; 
}
 
<h1>Lista de Productos</h1>
<a asp-action="Create" class="btn btn-primary">Crear Nuevo Producto</a>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Id</td>
                <td>@producto.Nombre</td>
                <td>@producto.Precio</td>
                <td>
                    <a asp-action="Details" asp-route-id="@producto.Id">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@producto.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@producto.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
